<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.orange.repository.OrderMapper">

	<select id="count" resultType="Integer">
		select count(*) from order_info
	</select>

	<insert id="save" parameterType="com.orange.model.OrderInfo">
    <![CDATA[
        INSERT INTO Order_Info (user_id, create_date) VALUES (#{userId}, now())
        ]]>
		<selectKey keyProperty="orderId" resultType="java.lang.Long"
			order="AFTER">
			SELECT LAST_INSERT_ID() AS orderId
		</selectKey>
	</insert>

	<insert id="saveOrderInfo"
		parameterType="com.orange.model.OrderInfo">
		INSERT INTO Order_Info (user_id, create_date)
		VALUES
		(#{userId}, #{createDate})
	</insert>

	<insert id="saveOrderItems" parameterType="java.util.List">
    <!-- 반복문을 이용하여 각 OrderItem을 한 번의 INSERT 문으로 저장 -->
    INSERT INTO Order_Item (order_id, user_id, item_id, item_name, image, item_price, item_count) VALUES
    <foreach collection="list" item="item" separator=",">
        (#{item.orderId}, #{item.userId}, #{item.itemId}, #{item.itemName}, #{item.image}, #{item.itemPrice}, #{item.itemCount})
    </foreach>
</insert>

<select id="getOrderItemsByOrderId" parameterType="Long" resultType="com.orange.model.OrderItem">
    SELECT * FROM Order_Item WHERE order_id = #{orderId}
</select>





</mapper>



